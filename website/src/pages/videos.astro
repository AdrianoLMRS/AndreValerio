---
import { author } from '@data/author';
import Pages from '@data/pages';
import Imgs from '@data/imgs';

// * Components
import Header from '@components/ts/Header';
import Social from '@components/astro/Social.astro';
import Layout from '@layouts/Layout.astro';
import Footer from '@components/astro/Footer.astro';
import Logo from '@components/astro/Logo.astro';
import MainContent from '@components/_pages/videos.astro';

// * Types
import type { Props as seoProps } from "astro-seo";

// * YT videos data
import latestVideos from '@data/videos.json';
import featuredVideos from '@data/featuredVideos.json';

const Shared = {
    title: `Videos & Movies â€“ ${author.name}`,
    description: `Explore a collection of videos and movies featuring ${author.name}.`,
    url: `${import.meta.env.SITE}${Pages.videos}`,
    image: Imgs.local.banner3.url,
};

const seo: seoProps = {
    title: Shared.title,
    description: Shared.description,
    canonical: Shared.url,
    twitter: {
        card: 'summary_large_image',
        site: Pages.social.arroba.twitter,
        creator: Pages.social.arroba.twitter,
        title: Shared.title,
        description: Shared.description,
        image: Shared.image,
        imageAlt: `${author.name} portrait`,
    },
    openGraph: {
        basic: {
            title: Shared.title,
            url: Shared.url,
            image: `${Shared.image}`,
            type: "website"
        },
        image: {
            url: Shared.image,
            secureUrl: Shared.image,
            alt: Shared.title,
            type: `image/${Imgs.local.banner2.format}`,
            width: Number(Imgs.local.banner2.width),
            height: Number(Imgs.local.banner2.height),
        },
        optional: {
            siteName: Shared.title,
            description: Shared.description,
            locale: "en_CA",
        }
  }
};

const schema = {
    item: {
        '@context': 'https://schema.org',
        '@graph': [
            {
                '@type': 'WebPage',
                name: Shared.title,
                description: Shared.description,
                url: Shared.url
            },
            {
                '@type': 'VideoGallery',
                name: `${author.name} Video Gallery`,
                description: Shared.description,
                thumbnailUrl: Shared.image,
                url: Shared.url
            },
            ...featuredVideos.map(video => ({
                '@type': 'VideoObject',
                name: video.title,
                description: video.description,
                thumbnailUrl: video.thumbnail,
                uploadDate: video.publishedAt,
                contentUrl: `https://www.youtube.com/watch?v=${video.id}`,
                embedUrl: `https://www.youtube.com/embed/${video.id}`,
                musicBy: video.channel || author.name,
                director: video.channel || author.name,
                actor: author.name,
            })),
            ...latestVideos.map(video => ({
                '@type': 'VideoObject',
                name: video.title,
                description: video.description,
                thumbnailUrl: video.thumbnail,
                uploadDate: video.publishedAt,
                contentUrl: `https://www.youtube.com/watch?v=${video.id}`,
                embedUrl: `https://www.youtube.com/embed/${video.id}`,
                musicBy: author.name,
                director: author.name,
                actor: author.name,
            }))
        ]
    }
};
// console.debug('Videos page schema:', JSON.stringify(schema, null, 2));

---

<Layout seo={seo} schema={schema} >
    <Header anime={true} scrollPosition={450} client:load >
        <Logo slot='logo' />
        <Social slot='social' />
    </Header>
    <MainContent />
    <Footer />
</Layout>