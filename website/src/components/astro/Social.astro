---
import { Image } from 'astro:assets';
import Pages from '@data/constants/pages';
import Imgs, { socialSize as Size } from '@data/constants/imgs';
import UrlLink from '@components/nav/urlLink';

const socialSize = Number(Size); // 96px
---

<div class="social">
    <ul>
        <UrlLink href={Pages.social.spotify} title="Spotify - André Valério" ariaLabel="Spotify" className="aria-link" target="_blank">
            <Image
                src={Imgs.cdn.spotify96}
                alt="Spotify - André Valério"
                height={socialSize} width={socialSize}
            />
        </UrlLink>
        <UrlLink href={Pages.social.applemusic} title="Apple Music - André Valério" ariaLabel="Apple Music" className="aria-link" target="_blank">
            <Image
                src={Imgs.cdn.applemusic}
                alt="Apple Music - André Valério"
                height={socialSize} width={socialSize}
            />
        </UrlLink>
        <UrlLink href={Pages.social.soundslice} title="Soundslice - André Valério" ariaLabel="Soundslice" className="aria-link" target="_blank">
            <Image
            src={Imgs.cdn.soundslice}
            alt="Soundslice - André Valério"
            height={socialSize} width={socialSize}
            />
        </UrlLink>
        <UrlLink href={Pages.social.linktree} title="Linktree - André Valério" ariaLabel="Linktree" className="aria-link" target="_blank">
            <Image
                src={Imgs.cdn.linktree}
                alt="Linktree - André Valério"
                height={socialSize} width={socialSize}
            />
        </UrlLink>
        <UrlLink href={Pages.social.youtube} title="Youtube - André Valério" ariaLabel="Youtube" className="aria-link" target="_blank">
            <Image
                src={Imgs.cdn.youtube}
                alt="Youtube - André Valério"
                height={socialSize} width={socialSize}
            />
        </UrlLink>
        <UrlLink href={Pages.social.instagram} title="Instagram - André Valério" ariaLabel="Instagram" className="aria-link" target="_blank">
            <Image
                src={Imgs.cdn.instagram}
                alt="Instagram - André Valério"
                height={socialSize} width={socialSize}
            />
        </UrlLink>
        <UrlLink href={Pages.social.facebook} title="Facebook - André Valério" ariaLabel="Facebook" className="aria-link" target="_blank">
            <Image
                src={Imgs.cdn.facebook}
                alt="Facebook - André Valério"
                height={socialSize} width={socialSize}
            />
        </UrlLink>
        <UrlLink href={Pages.social.twitter} title="Twitter - André Valério" ariaLabel="Twitter" className="aria-link" target="_blank">
            <Image
                src={Imgs.cdn.twitter}
                alt="Twitter - André Valério"
                height={socialSize} width={socialSize}
            />
        </UrlLink>
    </ul>
</div>