import { Testimonials as TestimonialsData } from "@data/testimonials";

// * The each div has to have the class "item" because of the Carousel.tsx
---

<div class="item testimonial">
    <figure class="testimonial-fig">
        <figcaption>
            <blockquote>
            <p>{TestimonialsData.t1}</p>
            </blockquote>
        </figcaption>
    </figure>
</div>
<div class="item testimonial">
    <figure class="testimonial-fig">
        <figcaption>
            <blockquote>
            <p>{TestimonialsData.t2}</p>
            </blockquote>
        </figcaption>
    </figure>
</div>
<div class="item testimonial">
    <figure class="testimonial-fig">
        <figcaption>
            <blockquote>
            <p>{TestimonialsData.t3}</p>
            </blockquote>
        </figcaption>
    </figure>
</div>

<style lang="scss" >

@use "@styles/mixins" as m;

$quotes: '@assets/quotes.svg';
$breakpoint: 375px;

$white: var(--white-color, white);
$highlight: var(--highlight-color, #d2652d);
$contrast: var(--contrast-color, blue);
$gray: var(--gray-color, #9e9e9e);

$transition: 200ms ease-in-out;
$transition-delay: 300ms ease-in;
$max-width: 500px;


.testimonial-fig {
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
    color: $gray;
    display: inline-block;
    font-family: 'Roboto', Arial, sans-serif;
    font-size: 1.2rem;
    max-width: $max-width;
    min-width: 200px;
    position: relative;
    text-align: center;
    width: 100%;
    white-space: normal;
    background-color: $white;
    border-radius: 5px;
    border-top: 5px solid $highlight;
    @include m.center-flex();
    @media only screen and (min-width: $max-width * 3) {
      height: 100%;
    }

    // @media only screen and (max-width: $breakpoint) {
    //     width: 200px !important;
    // }

    *, *:before, *:after {
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        -webkit-transition: all 0.1s ease-out;
        transition: all 0.1s ease-out;
    }

    transition: transform $transition, box-shadow $transition, border-top $transition-delay;
    @media (hover: hover) {
        &:hover {
            box-shadow: $gray 0px 3px 8px;
            transform: scale(1.05);
            border-top: 5px solid $contrast;
            color: var(--black-color, black);
            figcaption:after { background-color: $contrast; }
        }
    }


    figcaption {
        padding: 13% 10% 12%;

        &:before,
        &:after {
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 60px;
            display: block;
        }

        &:before {
            content: '';
            background-color: $white;
            border-radius: 50%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
            line-height: 60px;
        }

        &:after {
            content: '';
            mask-image: url($quotes);
            mask-repeat: no-repeat;
            mask-position: center;
            mask-size: 50%;
            background-color: $highlight;
            pointer-events: none;
            transition: background-color $transition-delay;
        }

    }

    blockquote {
        font-style: italic;
        font-weight: 300;
        margin: 0 0 20px;
    }
}

</style>