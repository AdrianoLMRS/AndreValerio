---
import { ClientRouter } from "astro:transitions";
import LoadingIndicator from "astro-loading-indicator/component"
import { SEO, type Props as seoProps } from "astro-seo";
import { Schema, type SchemaProps as schemaProps } from "astro-seo-schema"
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { GoogleAnalytics } from 'astro-analytics';
import '@styles/global.scss';

const { seo, schema } = Astro.props as {
  seo?: seoProps;
  schema?: schemaProps<any>;
};
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="none">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="license" content="MIT" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="license" itemprop="license" href="https://github.com/AdrianoLMRS/AndreValerio/blob/main/LICENSE" />
    <meta name="generator" content={Astro.generator} />

    {seo && <SEO {...seo} titleDefault="No title" />}
    {schema && <Schema {...schema} />}

    <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" />
    
    <ClientRouter /> {/* View transitions API */}
        <LoadingIndicator color="var(--highlight-color, #FA8334)" /> {/* Custom loading indicator component */}

    <GoogleAnalytics id={`${import.meta.env.GOOGLE_ANALYTICS_ID}`} /> {/* Google Analytics tracking ID */}
</head>
    <body transition:animate="fade" itemtype="https://schema.org/WebPage" itemscope>
        <slot />
    </body>
</html>