---
import { SEO, type Props as seoProps } from "astro-seo";
import { Schema, type Props as schemaProps } from "astro-seo-schema"
import '@styles/global.scss';

const { seo, schema } = Astro.props as {
  seo?: seoProps;
  schema?: schemaProps;
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="license" content="MIT" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="license" itemprop="license" href="https://github.com/AdrianoLMRS/AndreValerio/blob/main/LICENSE" />
    <meta name="generator" content={Astro.generator} />

    {seo && <SEO {...seo} titleDefault="No title" />}
    {schema && <Schema {...schema} />}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body itemtype="https://schema.org/WebPage" itemscope>
    <slot />
  </body>
</html>